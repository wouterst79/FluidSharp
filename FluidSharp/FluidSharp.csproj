<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Wouter Steenbergen</Authors>
    <Company>My Daily Bits LLC</Company>
    <Description>FluidSharp is a high performance mobile first multi-platform UI layout framework based on Skia.</Description>
    <Copyright>2020-2022 Wouter Steenbergen</Copyright>
    <PackageLicenseExpression></PackageLicenseExpression>
    <Version>1.2.4-alpha</Version>
		<Nullable>enable</Nullable>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SkiaSharp" Version="2.88.3" />
    <PackageReference Include="SkiaSharp.HarfBuzz" Version="2.88.3" />
    <PackageReference Include="SkiaSharp.TextBlocks" Version="1.2.10" />
    <PackageReference Include="Svg.Skia" Version="0.5.16" />
  </ItemGroup>

  <ItemGroup>
    <None Include="License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
